{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0",
      "title": "Movie List tracker FS",
      "description": "Backend and frontend for a movie list tracker",
      "termsOfService": "http://www.ibrsec.com",
      "contact": {
        "name": "ibrsec",
        "email": "ibr.seckin@gmail.com"
      }
    },
    "license": {
      "name": "ISC Licence"
    },
    "servers": [
      {
        "url": "https://blogapp-backend-express.vercel.app/"
      }
    ],
    "components": {
      "schemas": {
        "Movie": {
          "type": "object",
          "required": ["user_id", "movieTitle", "year", "image"],
          "properties": {
            "user_id": {
              "type": "object",
              "description": "User id of the user.",
              "example": "66979ace407c0200194cd6e1",
              "ref": "User"
            },
            "movieTitle": {
              "type": "string",
              "description": "Name of the movie.",
              "example": "Toy story 3",
              "maxLength": 50
            },
            "year": {
              "type": "number",
              "description": "Year of the movie.",
              "example": 2004,
              "maxLength": 4
            },
            "image": {
              "type": "string",
              "description": "image of the movie as url link. should start with http:// or https://",
              "example": "https://example.jpg"
            }
          }
        },
        "User": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "The username of the user.",
              "maxLength": 50,
              "example": "john_doe"
            },
            "email": {
              "type": "string",
              "description": "The email address of the user.",
              "maxLength": 50,
              "example": "john.doe@example.com",
              "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
            },
            "password": {
              "type": "string",
              "description": "The password of the user. Must contain at least one uppercase letter, one lowercase letter, one number, and one special character. Length should be between 8 and 16 characters.",
              "example": "Password1!",
              "minLength": 8,
              "maxLength": 16,
              "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,16}$"
            }
          },
          "required": ["username", "email", "password"]
        }
      },
      "securitySchemes": {
        "SessionCookie": {
          "type": "apiKey",
          "in": "cookie",
          "name": "session"
        }
      }
    },
    "security": [
      {
        "SessionCookie": []
      }
    ]
  },
  "apis": ["./src/controllers/*.js"]
}
